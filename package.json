{
  "name": "tonyswan",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "install:website": "npm install --prefix packages/website",
    "install:utils": "npm install --prefix packages/utils",
    "install:db": "npm install --prefix packages/db",
    "install:ui": "npm install --prefix packages/ui",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose down",
    "dev:website": "npm run db:start && npx nx dev website"
  },
  "private": true,
  "devDependencies": {
    "@nx/js": "17.1.1",
    "nx": "17.1.1",
    "typescript": "^5.2.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
